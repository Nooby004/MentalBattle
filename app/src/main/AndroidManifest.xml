<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mlallemant.mentalbattle">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>


        <activity android:name=".ui.MainActivity"
            android:theme="@style/myTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.game.GameActivity"
            android:launchMode="singleTop"
            android:theme="@style/myTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".ui.login.LoginActivity"
            android:launchMode="singleTop"
            android:theme="@style/myTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.login.SigninActivity"
            android:launchMode="singleTop"
            android:theme="@style/myTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.login.PlayAsGuest"
            android:launchMode="singleTop"
            android:theme="@style/myTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.menu.MenuActivity"
            android:launchMode="singleTop"
            android:theme="@style/myTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.session.SessionActivity"
            android:launchMode="singleTop"
            android:theme="@style/myTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.training.TrainingActivity"
            android:launchMode="singleTop"
            android:theme="@style/myTheme"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>