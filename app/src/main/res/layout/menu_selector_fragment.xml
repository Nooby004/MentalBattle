<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_marginBottom="20sp">

           <ImageView
               android:id="@+id/selector_iv_play"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:src="@drawable/ic_select_play" />

            <TextView
                android:id="@+id/selector_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:textSize="10sp"
                android:textColor="@color/whiteColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_column="0"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_row="1">

            <ImageView
                android:id="@+id/selector_iv_create"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:src="@drawable/ic_select_create" />

            <TextView
                android:id="@+id/selector_create_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Session"
                android:textSize="10sp"
                android:textColor="@color/whiteColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_column="2"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_row="1">

            <ImageView
                android:id="@+id/selector_iv_join"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:src="@drawable/ic_select_join" />

            <TextView
                android:id="@+id/selector_join_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Session"
                android:textSize="10sp"
                android:textColor="@color/whiteColor"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_marginTop="20sp">

            <ImageView
                android:id="@+id/selector_iv_friends"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:src="@drawable/ic_select_friends" />

            <TextView
                android:id="@+id/selector_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textSize="10sp"
                android:textColor="@color/whiteColor"/>
        </LinearLayout>

        <com.erz.joysticklibrary.JoyStick
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/selector_joy"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:padColor="@color/orangeColor"
            app:buttonColor="@color/whiteColor"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_columnWeight="1"
            app:percentage="40"
            android:layout_row="1" />


    </GridLayout>










</LinearLayout>