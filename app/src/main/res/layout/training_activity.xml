<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/training_rl_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/greenColor"
            android:layout_alignParentTop="true"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/greenColor"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/training_btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:layout_centerInParent="true"/>


        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/greenColor"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/orangeColor"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/training_tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:textColor="@color/orangeColor"/>



        <TextView
            android:id="@+id/training_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="20sp"
            android:textColor="@color/orangeColor"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/training_speed_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:textSize="50sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/training_et_result"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="@color/orangeColor" />

        <TextView
            android:id="@+id/training_speed_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:textSize="50sp"
            android:layout_weight="1"/>

    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/training_btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/shape_orange"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/training_btn_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/shape_orange"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/training_btn_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:background="@drawable/shape_orange"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/training_btn_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/shape_orange"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/training_btn_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/shape_orange"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/training_btn_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/shape_orange"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/training_btn_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/shape_orange"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/training_btn_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/shape_orange"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/training_btn_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/shape_orange"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/training_btn_minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/buttonshape_dark"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/training_btn_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/shape_orange"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>


            <ImageButton
                android:id="@+id/training_btn_backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/backspace"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/buttonshape_dark"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>