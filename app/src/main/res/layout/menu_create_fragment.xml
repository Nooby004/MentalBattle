<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">


        <ImageView
            android:id="@+id/iv_create_back"
            android:layout_width="0dp"
            android:layout_height="30sp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_select_back"
            android:scaleType="fitStart"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Create Session"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/whiteColor"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5" >
        </View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="start" >

        <EditText
            android:id="@+id/et_create_session_name"
            android:layout_marginTop="35sp"
            android:layout_marginBottom="10sp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="35sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:background="@color/whiteColor"
            android:textColor="@color/orangeColor"
            android:hint="Session Name"
            android:textColorHint="@color/whiteGrayColor" />

        <EditText
            android:id="@+id/et_create_session_password"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:inputType="textPassword"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:background="@color/whiteColor"
            android:textColor="@color/orangeColor"
            android:hint="Password"
            android:textColorHint="@color/whiteGrayColor" />


        <Button
            android:id="@+id/btn_create_session"
            android:layout_width="match_parent"
            android:layout_marginTop="30sp"
            android:layout_height="35sp"
            android:background="@drawable/buttonshape_orange"
            android:text="CREATE"/>

    </LinearLayout>



</LinearLayout>