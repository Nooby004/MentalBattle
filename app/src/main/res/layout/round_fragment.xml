<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15sp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">


        <!--  player1  -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="start|center"
            android:layout_weight="1"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/play_tv_player1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1 (you)"
                android:textColor="@color/greenColor"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/play_tv_player1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15sp"/>
        </LinearLayout>

        <!--  counter  -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/play_tv_counter"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:textColor="@color/orangeColor"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:text="60" />

            <ProgressBar
                android:id="@+id/play_pg_counter"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:visibility="visible" />
        </RelativeLayout>


        <!--  player1  -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/play_tv_player2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textColor="@color/greenColor"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/play_tv_player2_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/play_tv_calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="65 - 78"
        android:paddingTop="30sp"
        android:paddingBottom="30sp"
        android:textSize="60sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/play_et_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100sp"
        android:layout_marginEnd="100sp"
        android:textSize="40sp"
        android:gravity="center"
        android:enabled="false"
        android:textColor="@color/orangeColor"/>

    <LinearLayout
        android:layout_marginTop="30sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/play_btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_light"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/play_btn_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_light"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/play_btn_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_light"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/play_btn_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_light"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/play_btn_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_light"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/play_btn_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_light"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/play_btn_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_light"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/play_btn_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_light"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/play_btn_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_light"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/play_btn_minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_dark"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>

            <Button
                android:id="@+id/play_btn_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp"
                android:background="@drawable/buttonshape_light"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>


            <ImageButton
                android:id="@+id/play_btn_backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/backspace"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:padding="23dp"
                android:background="@drawable/buttonshape_dark"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2sp"/>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>