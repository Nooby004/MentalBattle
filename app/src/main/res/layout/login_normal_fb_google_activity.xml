<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:paddingTop="30sp"
        android:text="@string/app_name_space"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="30sp">


        <EditText
            android:id="@+id/login_et_email"
            android:layout_marginTop="35sp"
            android:layout_marginBottom="10sp"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:layout_height="35sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:background="@color/whiteColor"
            android:textColor="@color/orangeColor"
            android:hint="Email"
            android:textColorHint="@color/whiteGrayColor" />

        <EditText
            android:id="@+id/login_et_password"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:inputType="textPassword"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:background="@color/whiteColor"
            android:textColor="@color/orangeColor"
            android:hint="Password"
            android:textColorHint="@color/whiteGrayColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp">

            <Button

                android:id="@+id/login_btn_login"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="@drawable/buttonshape_orange"
                android:text="LOG IN"/>

            <ProgressBar
                android:id="@+id/login_pb_btn_login"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:elevation="2dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <TextView
                android:id="@+id/login_tv_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackground"
                android:text="SIGN IN"
                android:textColor="@color/whiteColor"/>

            <TextView
                android:id="@+id/login_tv_playasguest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentEnd="true"
                android:text="PLAY AS GUEST"
                android:textColor="@color/whiteColor"/>

        </RelativeLayout>


        <View
            android:layout_marginTop="60sp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:gravity="center">

            <Button
                android:id="@+id/login_btn_loginFB"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="@drawable/buttonshape_facebook"
                android:text="LOG IN WITH FACEBOOK"
                android:drawableStart="@drawable/ic_facebook_1"/>

            <ProgressBar
                android:id="@+id/login_pb_btn_loginFB"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:elevation="2dp"
                android:layout_alignParentEnd="true" />

         </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:gravity="center">

            <Button
                android:id="@+id/login_btn_loginGoogle"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="@drawable/buttonshape_google"
                android:text="LOG IN WITH GOOGLE"
                android:drawableStart="@drawable/ic_google_plus"/>

            <ProgressBar
                android:id="@+id/login_pb_btn_loginGoogle"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:elevation="2dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>




    </LinearLayout>




</LinearLayout>