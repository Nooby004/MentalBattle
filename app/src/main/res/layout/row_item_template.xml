<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:background="@drawable/buttonshape_dark"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginStart="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/row_item_profile_picture"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/user_image"
            app:civ_border_color="@color/orangeColor"
            app:civ_border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/row_item_iv_connect"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:src="@color/greenColor"
            app:civ_border_color="@color/whiteColor"
            app:civ_border_width="1dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:orientation="vertical"
        android:layout_marginEnd="10sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_item_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="/?"
                android:textColor="@color/orangeColor" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/row_item_tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="LVL /?"
                android:textColor="@color/orangeColor"
                android:gravity="end"/>

        </LinearLayout>


        <TextView
            android:id="@+id/row_item_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="/?"
            android:gravity="top"
            android:textColor="@color/greenColor"
            />

    </LinearLayout>




</LinearLayout>