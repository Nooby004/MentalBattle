<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15sp">

    <TextView
        android:id="@+id/session_transition_tv_round_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteColor"
        android:textSize="50sp"
        android:gravity="center"
        android:text="ROUND 1"
        />

    <ListView
        android:id="@+id/session_transition_lv_ranking"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="2sp"
        android:layout_marginTop="20sp"
        android:dividerHeight="2sp"
        android:background="@drawable/shape_orange" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/session_transition_tv_counter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textColor="@color/orangeColor"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:text="60" />

        <ProgressBar
            android:id="@+id/session_transition_pg_counter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>